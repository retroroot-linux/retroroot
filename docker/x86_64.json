{
  "environment": [{
    "buildroot_dir_name": "buildroot",
    "exit_after_build": true,
    "update_buildroot": false,
    "user": "br-user"
  }],
  "configs": [{
    "build": true,
    "clean": false,
    "remove": false,
    "verbose": false,
    "skip": false,
    "defconfig": "x86_64_kms_defconfig",
    "external_trees": [{
      "name": "retroroot",
      "fragment_dir": "configs/fragments",
      "fragments": [
        "audio.fragment",
        "bluetooth.fragment",
        "fonts.fragment",
        "i18n.fragment",
        "networking-tools.fragment",
        "mender.fragment",
        "mesa3d.fragment",
        "x86-kms.fragment",
        "linux-firmware.fragment",
        "retroarch-kms.fragment",
        "wifi.fragment"
      ]
    }],
    "output_tree": "retroroot",
    "config_dir_tree": "retroroot",
    "config_dir_name": "configs",
    "output_dir_name": "output"
  }]
}
